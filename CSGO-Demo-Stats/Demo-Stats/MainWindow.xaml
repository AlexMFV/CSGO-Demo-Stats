<Control:MetroWindow x:Class="Demo_Stats.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Demo_Stats"
        xmlns:Control="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      mc:Ignorable="d"
        Title="CSGO Demo Stats" Height="800" Width="1280"
        ShowIconOnTitleBar="True">

    <Control:MetroWindow.RightWindowCommands>
        <Control:WindowCommands>
            <Button>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconModern Width="24" Height="24" Kind="ListGear"/>
                    <TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="Settings"/>
                </StackPanel>                
            </Button>
        </Control:WindowCommands>
    </Control:MetroWindow.RightWindowCommands>
    
    <Frame x:Name="MainFrame" Content="CSGO Demo Stats" Background="#FF303030"/>
</Control:MetroWindow>
